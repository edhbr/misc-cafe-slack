{
  "image": {
    "type": "image",
    "image_url": "#url#",
    "alt_text": "#name#",
    "__inserts": ["image_url", "alt_text"]
  },
  "divider": {
    "type": "divider"
  },
  "mention_buttons": {
    "type": "actions",
    "elements": [
      {
        "type": "button",
        "text": {
          "type": "plain_text",
          "text": "What's your point? (help) :thinking_face:",
          "emoji": true
        },
        "value": "help"
      },
      {
        "type": "button",
        "text": {
          "type": "plain_text",
          "text": "Gimme some stats! :calendar:",
          "emoji": true
        },
        "value": "stats"
      },
      {
        "type": "button",
        "text": {
          "type": "plain_text",
          "text": "Check out my balance :scales:",
          "emoji": true
        },
        "value": "balance"
      },
      {
        "type": "static_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Add me a...",
          "emoji": true
        },
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "A coffee! :coffee:",
              "emoji": true
            },
            "value": "addOrder_:coffee:"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "A chocolate! :chocolate_bar:",
              "emoji": true
            },
            "value": "addOrder_:chocolate_bar:"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "A tea! :tea:",
              "emoji": true
            },
            "value": "addOrder_:tea:"
          }
        ]
      }
    ]
  },
  "info": {
    "type": "context",
    "elements": [
      {
        "type": "mrkdwn",
        "text": "ver. 1.0 | developed by <https://edhbr.fr|@edhbr> for <https://synerghetic.net|@synerghetic>"
      }
    ]
  }
}
